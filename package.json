{
    "scripts": {
        "dfx_install": "DFX_VERSION=0.15.1 sh -ci \"$(curl -fsSL https://sdk.dfinity.org/install.sh)\"",
        "replica_start": "dfx start --background",
        "replica_stop": "dfx stop",
        "canister_deploy_local": "dfx deploy bank_loan_application",
        "canister_deploy_mainnet": "dfx deploy --network ic bank_loan_application",
        "canister_uninstall": "dfx canister uninstall-code bank_loan_application",
        "canister_call_get_message": "dfx canister call bank_loan_application getMessage",
        "canister_call_set_message": "dfx canister call bank_loan_application setMessage '(\"Hello world!\")'"
    },
    "dependencies": {
        "@dfinity/agent": "^0.15.6",
        "@dfinity/candid": "^0.15.6",
        "azle": "^0.16.3",
        "uuid": "^9.0.0"
    },
    
    "devDependencies": {
        "@types/uuid": "^9.0.2"
    }
}

